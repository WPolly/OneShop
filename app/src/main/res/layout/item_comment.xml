<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:paddingBottom="22dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="18dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_comment_avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/avatar_default"/>

    <TextView
        android:id="@+id/tv_comment_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/civ_comment_avatar"
        android:layout_marginStart="12dp"
        android:text="2839292***t"
        android:textSize="14sp"/>
    
    <com.tcl.lishanwang.oneshop.view.StarRatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_comment_username"
        android:layout_toEndOf="@id/civ_comment_avatar"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        app:rating = "4.5"
        app:starSize="12dp"
        app:starEmptyDrawable="@drawable/goods_star_dark"
        app:starFullDrawable="@drawable/goods_star_light"
        app:starPadding="3dp"
        app:starCount="5"/>
</RelativeLayout>