<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/iv_item_commodity"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="15dp"
        android:src="@mipmap/avatar_default"/>

    <TextView
        android:id="@+id/tv_item_commodity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_item_commodity"
        android:layout_toEndOf="@id/iv_item_commodity"
        android:text="Alcatel Idol 4S 5.5"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_commodity_name"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/iv_item_commodity"
        android:text="$ 35.54"
        android:textColor="@color/colorRed"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_item_commodity"
        android:layout_toEndOf="@id/iv_item_commodity"
        android:text="531 comments 93% Good"
        android:textColor="@color/colorLightGray"
        android:textSize="12sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/iv_item_commodity"
        android:layout_toStartOf="@id/tv_item_commodity_name"
        android:background="@color/colorWhite"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/iv_item_commodity"
        android:layout_toEndOf="@id/iv_item_commodity"
        android:background="@color/colorBackground"/>

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignBottom="@id/iv_item_commodity"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:clickable="true"
        android:src="@drawable/selector_item_commodity_cart"/>
</RelativeLayout>