<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:scrollbars="none">

        <RadioGroup
            android:id="@+id/rg_category_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                style="@style/CategoryLeftMenuRadioButton"
                android:text="Protective\naccessories"/>

            <RadioButton
                style="@style/CategoryLeftMenuRadioButton"
                android:text="Audio"/>

            <RadioButton
                style="@style/CategoryLeftMenuRadioButton"
                android:text="Power bank"/>

            <RadioButton
                style="@style/CategoryLeftMenuRadioButton"
                android:text="Car\naccessories"/>

            <RadioButton
                style="@style/CategoryLeftMenuRadioButton"
                android:text="Universal\naccessories"/>

            <RadioButton
                style="@style/CategoryLeftMenuRadioButton"
                android:text="Wearables"/>
        </RadioGroup>
    </ScrollView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_category_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@android:color/white"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

</LinearLayout>